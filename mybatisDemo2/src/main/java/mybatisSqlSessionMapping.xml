<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
<!-- <properties resource="jdbc.properties"/>


	 -->
	 <!-- 设置实体类缩写   缩写名使用大小写不区分-->
<typeAliases>
	<package name="com.mybatis.mybatisDemo.model.entry"/>
</typeAliases>
  <environments default="development">
    <environment id="development">
      <transactionManager type="JDBC"/><!-- 事务管理 -->
      
      <dataSource type="POOLED">
        <property name="driver" value="com.mysql.jdbc.Driver"/>
        <property name="url" value="jdbc:mysql://localhost:3307/sharedatabase"/>
        <property name="username" value="root"/>
        <property name="password" value="root"/>
      </dataSource>
    </environment>
  </environments>
 <!--  <mappers>
    <package name="com.aura.mapper"/>
  </mappers> -->
  <!-- 将mapper 文件配置 -->
  <mappers>
  <mapper resource="com/mybatis/mybatisDemo/model/dao/daoImp/userMapper.xml"></mapper>
  </mappers>
</configuration>